{
  "name": "simply",
  "description": "simply theme for ghost by @GodoFredoNinja",
  "demo": "https://godofredo.ninja",
  "version": "0.4.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "GPLv3",
  "screenshots": {
    "desktop": "screenshot.jpg"
  },
  "author": {
    "name": "GodoFredo",
    "email": "hello@godofredo.ninja",
    "url": "https://godofredo.ninja"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine",
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "GodoFredoNinja"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/godofredoninja/simply"
  },
  "bugs": {
    "url": "https://github.com/godofredoninja/simply/issues",
    "email": "hello@godofredo.ninja"
  },
  "config": {
    "posts_per_page": 18,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": {
      "exclude": [
        "bookmark",
        "blockquote"
      ]
    },
    "custom": {
      "header": {
        "type": "select",
        "options": [
          "Menu on the left",
          "Menu on the right",
          "Stacked"
        ],
        "default": "Menu on the left"
      },
      "footer": {
        "type": "select",
        "options": [
          "Default",
          "Dark",
          "No Secondary Navigation"
        ],
        "default": "Default"
      },
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "Auto"
        ],
        "default": "Auto"
      },
      "pagination": {
        "type": "select",
        "options": [
          "Infinite Scroll",
          "Pagination Number"
        ],
        "default": "Infinite Scroll"
      },
      "story_meta": {
        "type": "select",
        "options": [
          "Author",
          "Read More"
        ],
        "default": "Author"
      },
      "publication_cover": {
        "type": "select",
        "options": [
          "Cover",
          "None",
          "Featured",
          "Featured Slider",
          "Round",
          "Typewriter"
        ],
        "default": "Cover",
        "group": "homepage"
      },
      "publication_cover_title": {
        "type": "text",
        "group": "homepage"
      },
      "publication_cover_description": {
        "type": "text",
        "group": "homepage"
      },
      "publication_cover_color": {
        "type": "color",
        "default": "#ffffff",
        "group": "homepage"
      },
      "enter_tag_slugs_for_homepage_sections": {
        "type": "text",
        "group": "homepage"
      },
      "post_font": {
        "type": "select",
        "options": [
          "font-sans",
          "font-serif"
        ],
        "default": "font-serif",
        "group": "post"
      },
      "previous_and_next_post": {
        "type": "select",
        "options": [
          "List",
          "Grid",
          "Grid Rounded",
          "None"
        ],
        "default": "List",
        "group": "post"
      },
      "show_newsletter": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "newsletter_text": {
        "type": "text",
        "default": "Sign up for more like this",
        "group": "post"
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "cssnano": {
    "preset": [
      "advanced",
      {
        "reduceIdents": false
      }
    ]
  },
  "scripts": {
    "build": "gulp build",
    "prod": "cross-env NODE_ENV=production gulp production --production",
    "dev": "gulp development",
    "lint:js": "standard src/js/**/*.js gulpfile.js",
    "lint:css": "stylelint src/css/**/*.css",
    "lint": "yarn lint:js && yarn lint:css",
    "test": "yarn lint && gscan .",
    "scan": "gscan ."
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/runtime": "^7.20.7",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.13",
    "babelify": "^10.0.0",
    "beeper": "^2.1.0",
    "browserify": "^17.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "cssnano-preset-advanced": "^5.3.9",
    "del": "^6.1.1",
    "gscan": "^4.36.0",
    "gulp": "^4.0.2",
    "gulp-header": "^2.0.9",
    "gulp-if": "^3.0.0",
    "gulp-livereload": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-strip-comments": "^2.5.2",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "merge-stream": "^2.0.0",
    "postcss": "^8.4.21",
    "postcss-discard-comments": "^5.1.2",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "precss": "^4.0.0",
    "pump": "^3.0.0",
    "standard": "^17.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended": "^9.0.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "infinite-scroll": "^4.0.1",
    "lazysizes": "^5.3.2",
    "medium-zoom": "^1.0.8",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.29.0",
    "tailwindcss": "^3.2.4"
  }
}
