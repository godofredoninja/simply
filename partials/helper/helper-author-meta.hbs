<div class="hh u-flex u-flexCenter u-relative zindex4">
    {{!-- Author Avatar --}}
    {{#primary_author}}
    <a href="{{url}}" title="{{t "Go to the profile of"}} {{name}}" class="hh-avatar u-flex0 u-relative avatar-image {{#is "post"}}godo-tracking img-md{{/is}}" {{#is "post"}}data-event-category="Article" data-event-action="Author - {{name}}" data-event-label="Avatar" data-event-non-interaction="true"{{/is}}>
        <img class="u-absolute u-image u-block u-round" src="{{#if profile_image}}{{img_url profile_image size="xs"}}{{else}}{{asset "images/avatar.png"}}{{/if}}" alt="{{t "Go to the profile of "}} {{name}}"/>
    </a>
    {{/primary_author}}

    <div class="hh-right u-flex1 u-overflowHidden u-fontSize15">

        {{#primary_author}}
            {{!-- Author Name --}}
            <a href="{{url}}" title="{{t "Go to the profile of"}} {{name}}" class="hh-author-name link--underline u-primary-color u-textCapitalize {{#is "post"}}godo-tracking{{/is}}" {{#is "post"}}data-event-category="Article" data-event-action="Author - {{name}}" data-event-label="Profile" data-event-non-interaction="true"{{/is}}>{{name}}</a>

            {{!-- Author Social Media (Facebook - twitter) - Show only in Post --}}
            {{#is "post"}}{{#has any="facebook, twitter"}}
                <div class="hh-follow u-inlineBlock">
                    <span class="hh-follow-toggle hh-btn button--primary">{{t "Follow"}}</span>
                    {{!-- Author Facebook and Twitter --}}
                    <div class="hh-follow-show u-inlineBlock" style="display:none">
                        {{#if facebook}}<a class="hh-btn hh-fb u-textColorWhite godo-tracking" href="{{facebook_url}}" title="Facebook" target="_blank" rel="noopener noreferrer" data-event-category="Article" data-event-action="Author - {{name}}" data-event-label="Facebook" data-event-non-interaction="true"><i class="i-facebook"></i> Facebook</a>{{/if}}
                        {{#if twitter}}<a class="hh-btn hh-tw u-textColorWhite godo-tracking" href="{{twitter_url}}" title="{{twitter}}" target="_blank" rel="noopener noreferrer" data-event-category="Article" data-event-action="Author - {{name}}" data-event-label="Twitter" data-event-non-interaction="true"><i class="i-twitter"></i> Twitter</a>{{/if}}
                    </div>
                </div>
            {{/has}}{{/is}}
        {{/primary_author}}

        {{!-- Primary Tag - Show when you are not in the post --}}
        {{^is "post"}}{{#if primary_tag}}{{#primary_tag}}
            <span class="u-textColorNormal">{{t "in"}}</span> <a href="{{url}}" title="{{t "Go to"}} {{name}}" class="hh-tag link--underline u-primary-color u-textCapitalize">{{name}}</a>
        {{/primary_tag}}{{/if}}{{/is}}

        {{!-- Datetime - ReadingTime - partials/helper/helper-datetime.hbs --}}
        {{> "helper/helper-datetime"}}
    </div>
</div>
