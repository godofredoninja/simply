{{#if primary_tag}}
<div class="mb-3 text-gray-500 tracking-wide text-sm font-medium">
    {{#primary_tag}}<a class="uppercase hover:underline" href="{{url}}">{{name}}</a>{{/primary_tag}}
</div>
{{/if}}

<h1 class="post-title text-title tracking-less leading-tight{{#if classTitle}} {{classTitle}}{{else}} text-32 md:text-4xl lg:text-40{{/if}}">{{title}}</h1>
{{#if custom_excerpt}}<p class="post-excerpt leading-snug mt-3 text-xl">{{custom_excerpt}}</p>{{/if}}

<div class="flex flex-col md:flex-row mt-6">
    {{!-- [Author, DateTime, Reading Time] - ./partials/components/author-meta.hbs --}}
    {{> "components/author-meta"}}

    {{!-- Social Share - ./partials/components/social-share --}}
    {{> "components/social-share" class="order-first mb-6 md:mb-0 md:order-none" Tracking_name="Header"}}
</div>
