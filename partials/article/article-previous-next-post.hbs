{{#match @custom.previous_and_next_post "=" "List"}}
    <div class="prev-next pb-8">
        <hr class="my-10">
        {{#prev_post}}{{> "story/story-previous-next" storyTitle=(t "Previous article") class="mb-8"}}{{/prev_post}}
        {{#next_post}}{{> "story/story-previous-next" storyTitle=(t "Next article") class=""}}{{/next_post}}
    </div>
{{/match}}

{{#match @custom.previous_and_next_post "=" "Grid"}}
<div class="prev-next pb-8">
    <hr class="my-10">
    <div class="grid gap-8 md:gap-4 md:grid-cols-2">
        {{#prev_post}}{{> "story/story-previous-next-grid" storyTitle=(t "Previous article") classBody="pl-4"  classImage="rounded w-24 h-24 object-cover blur-up lazyload"}}{{/prev_post}}
        {{#next_post}}{{> "story/story-previous-next-grid" storyTitle=(t "Next article") classBody="pr-4 text-right order-first"  classImage="rounded w-24 h-24 object-cover blur-up lazyload"}}{{/next_post}}
    </div>
</div>
{{/match}}

{{#match @custom.previous_and_next_post "=" "Grid Rounded"}}
<div class="prev-next pb-8">
    <hr class="my-10">
    <div class="grid gap-8 md:gap-4 md:grid-cols-2">
        {{#prev_post}}{{> "story/story-previous-next-grid" storyTitle=(t "Previous article") classBody="pl-4" classImage="rounded-full w-24 h-24 object-cover blur-up lazyload"}}{{/prev_post}}
        {{#next_post}}{{> "story/story-previous-next-grid" storyTitle=(t "Next article") classBody="pr-4 text-right order-first" classImage="rounded-full w-24 h-24 object-cover blur-up lazyload"}}{{/next_post}}
    </div>
</div>
{{/match}}