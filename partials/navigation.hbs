{{!-- Navigation Secondary for Footer --}}
{{#if isSecondary}}

<nav class="menu-secondary">
    <ul itemscope itemtype="http://www.schema.org/SiteNavigationElement" role="menu">

        {{#foreach navigation}}
        <li itemprop="name" role="menuitem" class="inline-block">
            <a itemprop="url" href="{{url absolute="true"}}"
                class="godo-tracking font-medium p-2 inline-block hover:opacity-80"
                data-event-category="Footer"
                data-event-action="Menu"
                data-event-label="{{label}}"
                data-event-non-interaction="true">{{label}}</a>
        </li>
        {{/foreach}}

    </ul>
</nav>

{{else}}

{{!-- Navigation for Mobile --}}
{{#if navigationMobile}}

<ul>
    {{#foreach navigation}}
    <li>
        <a href="{{url absolute="true"}}" class="block px-5 py-2 font-medium text-22 leading-tight">{{label}}</a>
    </li>
    {{/foreach}}
</ul>

{{!-- Primary Navigation --}}
{{else}}

<nav class="js-head-menu header-center mainMenu flex items-center h-16 overflow-x-hidden {{#match @custom.header "Menu on the right"}} justify-end{{/match}}">
