                class="mainMenu-link godo-tracking flex items-center text-base text-header-link hover:opacity-80{{#if current}} active underline underline-offset-2{{/if}}"
                data-event-category="Header"
                data-event-action="Menu"
                data-event-label="{{label}}"
                data-event-non-interaction="true">
                {{label}}
