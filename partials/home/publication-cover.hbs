{{!-- Cover Home page --}}
{{#match @custom.publication_cover "Cover"}}
{{#contentFor "special_body_class"}}is-home-cover has-cover is-head-transparent is-menu-text-custom{{/contentFor}}

<div class="simply-hero-cover pt-16 relative flex items-center min-h-screen overflow-hidden">
    <div class="container relative py-12 mx-auto md:py-vw4 z-3 md:px-5">
        <div class="text-center text-black{{#match @custom.publication_cover_align_content "Center"}} text-center max-w-5xl mx-auto{{else match @custom.publication_cover_align_content "Right"}} ml-auto md:text-left md:max-w-md lg:max-w-3xl{{else}} md:text-left md:max-w-md lg:max-w-3xl{{/match}}">
            <h1 class="text-5xl md:text-6xl lg:text-7xlg">{{#if @custom.publication_cover_title}}{{{@custom.publication_cover_title}}}{{else}}{{@site.title}}{{/if}}</h1>
            {{#if @custom.publication_cover_description}}<p class="mt-6 text-22 lg:text-2xl">{{{@custom.publication_cover_description}}}</p>{{/if}}
            {{!-- {{#if @site.members_enabled}}{{#unless @member}}<a data-portal="account/signup" class="mt-12 text-xl button is-black not-dark" href="#/portal/signup">{{t "Get Started"}}</a>{{/unless}}{{/if}} --}}
        </div>
    </div>

    {{!-- Featured Image - partials/components/featured-image.hbs --}}
    {{> "components/featured-image" mediaImage=@site.cover_image mediaAlt=@site.title  mediaClass="inset-image"}}
</div>
{{/match}}

{{!-- Featured Article - ./partials/story/story-featured.hbs --}}
{{#match @custom.publication_cover "Featured"}}{{#get "posts" limit="1" filter="featured:true" as |godo_featured_post| }}
    {{#if godo_featured_post}} {{#foreach godo_featured_post}}{{> "story/story-featured"}}{{/foreach}}{{/if}}
{{/get}}{{/match}}

{{!-- Last 5 featured articles slider - ./partials/home/featured-slider.hbs --}}
{{#match @custom.publication_cover "Featured Slider"}}{{> "home/featured-slider"}}{{/match}}

{{!-- Publication Cover Round --}}
{{#match @custom.publication_cover "Round"}}
{{#contentFor "special_body_class"}}is-home-cover has-cover is-head-transparent{{/contentFor}}

<div class="simply-hero-cover pt-16 flex items-center min-h-screen bg-gray-200">
    <div class="container flex flex-col justify-between gap-10 py-12 mx-auto md:flex-row md:py-vw4">
        <div class="text-center md:text-left md:max-w-md lg:max-w-2xl text-title">
            <h1 class="text-5xl lg:text-7xl">{{#if @custom.publication_cover_title}}{{{@custom.publication_cover_title}}}{{else}}{{@site.title}}{{/if}}</h1>
            {{#if @custom.publication_cover_description}}<p class="mt-6 text-22 lg:text-2xl">{{{@custom.publication_cover_description}}}</p>{{/if}}
        </div>

         <div class="flex items-center flex-none{{#match @custom.publication_cover_align_content "Left"}} order-first{{/match}}">
            <div class="relative mx-auto overflow-hidden border-white rounded-full shadow-xl w-72 h-72 lg:w-96 lg:h-96" style="border-width: 0.875rem;">
                {{!-- Featured Image - partials/components/featured-image.hbs --}}
                {{> "components/featured-image" mediaImage=@site.cover_image mediaAlt=@site.title mediaSize="l"  mediaClass="inset-image"}}
            </div>
        </div>
    </div>
</div>
{{/match}}

{{!-- Publication Cover Typewriter --}}
{{#match @custom.publication_cover "Typewriter"}}
{{#contentFor "special_body_class"}}is-home-cover has-cover is-head-transparent is-menu-text-custom{{/contentFor}}
<div class="simply-hero-cover pt-16 relative flex items-center min-h-screen overflow-hidden">
    <div class="container relative py-12 mx-auto md:py-vw4 z-3 md:px-5">
        <div class="text-center text-black{{#match @custom.publication_cover_align_content "Center"}} text-center max-w-5xl mx-auto{{else match @custom.publication_cover_align_content "Right"}} ml-auto md:text-left md:max-w-md lg:max-w-3xl{{else}} md:text-left md:max-w-md lg:max-w-3xl{{/match}}">
            <h1 class="text-5xl tracking-wider lg:text-7xl">{{#if @custom.publication_cover_title}}{{{@custom.publication_cover_title}}}{{else}}{{@site.title}}{{/if}}</h1>

            {{#if @custom.publication_cover_description}}
                <div class="mt-6 text-3xl md:text-32"><span id="typewriter" class="font-medium"></span></div>

                {{#contentFor "scripts"}}
                    <script src="https://unpkg.com/typewriter-effect@latest/dist/core.js"></script>
                    <script>
                        var app = document.getElementById('typewriter');

                        var typeLetters ='{{{@custom.publication_cover_description}}}';

                        var typewriter = new Typewriter(app, {
                            strings: typeLetters.split(','),
                            loop: true,
                            delay: 90,
                            autoStart: true,
                        });
                    </script>
                {{/contentFor}}
            {{/if}}
        </div>
    </div>

    {{!-- Featured Image - partials/components/featured-image.hbs --}}
    {{> "components/featured-image" mediaImage=@site.cover_image mediaAlt=@site.title  mediaClass="inset-image"}}
</div>
{{/match}}