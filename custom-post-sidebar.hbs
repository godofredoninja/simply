{{!-- Layout --}}
{{!< default}}

{{#post}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}is-article is-sidebar{{/contentFor}}

<div class="container mx-auto px-4 py-16">
    <div class=" max-w-1100 mx-auto">
        <div class="row">
            <div class="col s12 l7">
                <article>
                    <header class="story-post-header mb-5">
                        <h1 class="text-4xl leading-tight text-title mb-5">{{title}}</h1>
                        {{#if custom_excerpt}}<p class="post-excerpt my-6 text-xl font-medium text-gray-500">{{custom_excerpt}}</p>{{/if}}
                        {{!-- Author - Primary Tag - Datetime - Read time - ./partials/components/author-meta.hbs --}}
                        {{> "components/author-meta"}}
                    </header>

                    {{#if feature_image}}
                    <figure class="story-post-media relative overflow-hidden rounded-lg shadow-3xl">
                        <img class="story-img block w-full object-cover object-center simply-zoom"
                            src="{{img_url feature_image size="m"}}"
                            srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w"
                            sizes="(max-width: 1000px) 400px, 600px"
                            alt="{{title}}"
                        />
                    </figure>
                    {{/if}}

                    <div id="post-body" class="post-body has-sidebar relative">{{content}}</div>

                    {{!-- Tags - ./partials/components/tags,hbs --}}
                    <footer class="post-footer px-4 mx-auto max-w-740 pt-10">{{> "components/tags"}}</footer>
                </article>
            </div>

            <div class="col s12 l1"></div>

            {{!-- Sidebar - partials/sidebar/sidebar-post.hbs --}}
            {{>"sidebar/sidebar-post"}}
        </div>
    </div>
</div>

{{/post}}

{{!-- 6 Related Articles - partials/article/article-related.hbs --}}
{{> "article/article-related"}}